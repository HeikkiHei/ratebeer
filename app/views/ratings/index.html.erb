<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<p><%="Number of ratings: #{@ratings.count}" %></p>

<ul>
    <% @ratings.each do |rating| %>
        <li> <%= rating %> <%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
    <% end %>
</ul>

<%= link_to 'New Rating', new_rating_path %><br>
